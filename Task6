using System;

namespace IJuniorHW
{
    class Program
    {
        static void Main(string[] args)
        {
            int picturesAmount = 52;
            int picturesInRow = 3;
            int numberOfCompletedRows = picturesAmount / picturesInRow;
            int numberOfRemainingPictures = picturesAmount % picturesInRow;
            Console.WriteLine("Колличество полностью заполненых рядов: {0}", numberOfCompletedRows);
            Console.WriteLine("Картинок сверх меры: {0}", numberOfRemainingPictures);
        }
    }
}
